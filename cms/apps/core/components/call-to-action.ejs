<% if (current.variant === 'type1' || !current.variant) {%>
<section class="fdb-block">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 text-center">
        <p class="lead">
          <%= current.title%>
        </p>
        <p class="mt-5 mt-sm-4">
          <% if (current.buttons) {%>
          <% for(var i=0; i < current.buttons.length; i++) { %>
          <a class="btn btn-primary <%=current.buttons[i].class%>" href="<%=current.buttons[i].href%>"><%=current.buttons[i].text%></a>
          <% } %>
          <% } %>
        </p>
      </div>
    </div>
  </div>
</section>
<% } %>
<% if (current.variant === 'type2') {%>
<section class="fdb-block bg-dark fdb-viewport" style="background-image: url(imgs/hero/blue.svg);">
  <div class="container align-items-center justify-content-center d-flex">
    <div class="row justify-content-center text-center">
      <div class="col-12 col-md-10 col-lg-8">
        <h1><%= current.title%></h1>

        <% if (current.buttons) {%>
        <% for(var i=0; i < current.buttons.length; i++) { %>
        <p class="mt-5"><a href="<%=current.buttons[i].href%>"
            class="btn btn-outline-light <%=current.buttons[i].class%>"><%=current.buttons[i].text%></a></p>
        <% } %>
        <% } %>
      </div>
    </div>
  </div>
</section>
<% } %>
<% if (current.variant === 'type3') {%>
  
    <!-- Contents 12 -->
    <section class="fdb-block">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-12 col-md-6 col-lg-5">
            <h1><%= current.title%></h1>
            <p class="lead"><%= current.description%></p>
          </div>
          <div class="col-12 col-md-6 ml-md-auto mt-4 mt-md-0">
            <img alt="image" class="img-fluid" src="<%=current.imgUrl%>">
          </div>
        </div>
      </div>
    </section>
<% } %>
<% if (current.variant === 'type4') {%>
  <section class="fdb-block">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
          <h1><%= current.title%></h1>
          <p class="lead"><%= current.description%></p>
          <% if (current.buttons) {%>
            <% for(var i=0; i < current.buttons.length; i++) { %>
            <p class="mt-5"><a href="<%=current.buttons[i].href%>"
                class="btn btn-outline-light <%=current.buttons[i].class%>"><%=current.buttons[i].text%></a></p>
            <% } %>
            <% } %>
        </div>
      </div>
    </div>
  </section>

<% } %>
